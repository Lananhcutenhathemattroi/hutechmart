@{ Layout = null; }

<div style="visibility:hidden" class="overlay dark d-flex justify-content-center align-items-center" id="createloading">
    <i class="fas fa-2x fa-sync fa-spin"></i>
</div>

<div class="modal-header">
    <h5 class="modal-title">Thêm  phân loại</h5>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body form-horizontal">
    <div class="form-group row">
        <label class="control-form-label col-sm-4" style="margin-top:5px">Tên phân loại</label>
        <div class="col-sm-6">
            <input type="text" id="tenphanloai" name="tenphanloai" class="form-control" placeholder="Tên phân loại" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-form-label col-sm-4" style="margin-top:5px">Ghi chú</label>
        <div class="col-sm-6">
            <textarea type="text" id="ghichu" name="ghichu" class="form-control" cols="5" rows="5" />
        </div>
    </div>
</div>

<div class="modal-footer">
    <button class="btn bg-olive" onclick="CreateGroup()">Thêm Mới</button>
</div>