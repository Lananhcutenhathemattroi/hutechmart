@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Đăng nhập</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Assets/Admin_Layout/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin_Layout/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin_Layout/css/AdminLTE.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <link href="~/Assets/sweetalert2-10.10.1/package/dist/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Assets/sweetalert2-10.10.1/package/dist/sweetalert2.min.js"></script>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>HUTECH</b>-MART
        </div>
        <div class="login-box-body">
            <br />
            <form>
                <div class="form-group has-feedback">
                    <input type="text" id="taiKhoan" name="taiKhoan" class="form-control" placeholder="Tài khoản" required>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" id="matKhau" name="matKhau" class="form-control" placeholder="Mật khẩu" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8" style="visibility:hidden" id="checkLogin">
                        <p class="text-red">Đang xác minh....</p>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat" id="btnLogin">Đăng nhập</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="~/Assets/sweetalert2-10.10.1/package/dist/sweetalert2.all.min.js"></script>

    <script src="~/Assets/Admin_Layout/jquery/dist/jquery.min.js"></script>
    
    <script src="~/Assets/Js/Login/LoginIndex.js"></script>
</body>
</html>
