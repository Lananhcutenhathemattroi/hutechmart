@model HutechMart.Models.tbl_NhaCungCap

@{
    Layout = null;
    var session = (HutechMart.Models.tbl_NhanVien)Session["NguoiDung"];
}

<div style="visibility:hidden" class="overlay dark d-flex justify-content-center align-items-center" id="createloading">
    <i class="fas fa-2x fa-sync fa-spin"></i>
</div>

<div class="modal-header">
    <h5 class="modal-title">Thêm nhà cung cấp mới</h5>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body form-horizontal">
    <form id="formCreate">
        <input type="hidden" id="id_nguoitao" name="id_nguoitao" value="@session.id" />
        <input type="hidden" id="id_cuahang" name="id_cuahang" value="@session.tbl_CuaHang.id" />
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        @Html.LabelFor(model => model.manhacungcap, htmlAttributes: new { @class = "control-form-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.manhacungcap, new { @class = "form-control", @placeholder = "Mã mặc định", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.id_phanloai, htmlAttributes: new { @class = "control-form-label col-sm-4" })
                        <div class="col-sm-4">
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.id_phanloai, "1", new { @id = "gt-phanloai_congty" })
                                Công ty
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.id_phanloai, "2", new { @id = "phanloai_canhan" })
                                Cá nhân
                            </label>
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.tennhacungcap, htmlAttributes: new { @class = "control-form-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.tennhacungcap, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.masothue, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.masothue, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.sodienthoai, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.sodienthoai, new { @class = "form-control", @type = "number" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        @Html.LabelFor(model => model.diachi_tentinh, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.diachi_tentinh, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.diachi_tenquan, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.diachi_tenquan, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.diachi_tenphuong, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.diachi_tenphuong, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.diachi_sonha, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.diachi_sonha, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.ghichu, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.TextAreaFor(model => model.ghichu, new { @class = "form-control", @rows = "3" })
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>

<div class="modal-footer">
    <button id="btnCreate" class="btn bg-olive" onclick="Create()">Thêm Mới</button>
</div>

<script src="~/Assets/Js/address.js"></script>

